{% extends 'layout.njk' %}

{% block content %}
 
  <div class="card">
        <section class="img" style="background: url('{{student.url}}')  no-repeat center center / cover"></section>
        <section class="info">
           <h3>Informações do Estudante</h3>

             <div class="item">
              <div>Nome</div>
              <div>{{student.name}}</div>
             </div>

              <div class="item">
                <div>Aniversario</div>
                <div>{{student.birthday}}</div>
              </div>

              <div class="item">
                 <div>Ano Escolar</div>
                 <div>{{student.year}}</div>
              </div>

               <div class="item">
                 <div>Carga Horaria Semanal</div>
                 <div>{{student.chs}} horas</div>
               </div>
              <div class="item">
                <div>Email</div>
                <div>{{student.email}}</div>
              </div>

              <div class="item">
                <div>Professor</div>
                <div>{{student.teachers_name}}</div>
              </div>
               
                <a href="/students/{{student.id}}/edit" > 
                  <div class="edit">
                      Editar
                    </div>
                  </a>          
        </section>
    </div>
{% endblock content %}