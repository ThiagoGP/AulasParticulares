{% extends 'layout.njk' %}

{% block content %}
  
  <form action="/students?_method=PUT" method="post" class="card">
   <section class="img" style="background: url('{{student.url}}')  no-repeat center center / cover"></section>
  
   <section class="info">
     <h3>Editar Estudante</h3>
        <div class="item">
            <div>Foto do Estudante</div>
            <div><input type="url" name="url" placeholder="https://" value="{{student.url}}"></div>
        </div>

        <div class="item">
         <div>Nome do Estudante</div>
         <div><input type="text" name="name" value="{{student.name}}"></div>
        </div>

        <div class="item">
        <div>Data de Nascimento</div>
        <div><input type="date" name="birthday" value="{{student.birthday}}"></div>
        </div>

        <div class="item">
            <div>Email do Estudante</div>
            <div><input type="email" name="email" value="{{student.email}}"></div>
        </div>

        <div class="item">
          <div>Ano Escolar</div>
          <div>
          <select name="year">
                <option value="5" {% if student.year == "5" %}
                selected
                {% endif %}>5º ano do ensino fundamental</option>
                <option value="6"{% if student.year == "6" %}
                selected
                {% endif %}>6º ano do ensino fundamental</option>
                <option value="7" {% if student.year == "7" %}
                selected
                {% endif %}>7º ano do ensino fundamental</option>
                <option value="8" {% if student.year == "8" %}
                selected
                {% endif %}>8º ano do ensino fundamental</option>
                <option value="9" {% if student.year == "9" %}
                selected
                {% endif %}>9º ano do ensino fundamental</option>
                <option value="1" {% if student.year == "1" %}
                selected
                {% endif %}>1º ano do ensino médio</option>
                <option value="2" {% if student.year == "2" %}
                selected
                {% endif %}>2º ano do ensino médio</option>
                <option value="3" {% if student.year == "3" %}
                selected
                {% endif %}>3º ano do ensino médio</option>
          </select>
          </div>
        </div>

        <div class="item">
          <div>Carga Horária semanal</div>
          <div><input type="number" name="chs" min="1" value="{{student.chs}}"></div>
        </div>

        <div class="item">
          <div>Professor:</div>
          <div>
            <select name="teacher_id">
            {% for teacher in teacheroption %}
              <option value="{{teacher.id}}" {% if student.teacher_id == teacher.id %} selected
              {% endif %}>{{teacher.name}}
              </option>
            {% endfor %}

            </select>
          </div>
         <input type="hidden" name="id" value={{student.id}}>
        <button type="submit" class="submit">Salvar</button>
  </form>
   <form action="/students?_method=DELETE" method="post"  id="deletar">
      <input type="hidden" name="id" value="{{student.id}}">
  
        <button type="submit" class="submit" id="delet">Deletar</button>
       </form> 
    </section>
  
  

{% endblock content %}